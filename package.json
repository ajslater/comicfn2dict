{
  "version": "0.2.0",
  "description": "comicfn2dict linting",
  "type": "module",
  "scripts": {
    "fix": "eslint_d --cache --fix . && prettier --write .",
    "lint": "eslint_d --cache . && prettier --check ."
  },
  "prettier": {
    "plugins": [
      "@prettier/plugin-xml",
      "prettier-plugin-packagejson",
      "prettier-plugin-sh",
      "prettier-plugin-toml"
    ],
    "overrides": [
      {
        "files": [
          "**/*.md"
        ],
        "options": {
          "proseWrap": "always"
        }
      },
      {
        "files": [
          "**/*Dockerfile"
        ],
        "options": {
          "parser": "sh"
        }
      }
    ]
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.2.1",
    "@fsouza/prettierd": "^0.26.1",
    "@prettier/plugin-xml": "^3.0.0",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-array-func": "^5.0.1",
    "eslint-plugin-compat": "^6.0.1",
    "eslint-plugin-depend": "^1.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-no-unsanitized": "^4.1.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-scanjs-rules": "^0.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-toml": "^0.12.0",
    "eslint-plugin-unicorn": "^59.0.0",
    "eslint-plugin-yml": "^1.14.0",
    "eslint_d": "^14.1.1",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.4.4",
    "prettier-plugin-sh": "^0.17.1",
    "prettier-plugin-toml": "^2.0.1"
  }
}
